<h4 class="mt-3 mx-5" >My Stocks</h4>
<hr class="border border-dark border-3 mx-5">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<div class="container responsive-portfolio-index">
<div class="overflow-auto p-4 scroll ">
  <section class = "row row-cols-1 row-cols-md-3 row-cols-sm-2 row-cols-lg-4 g-4">
    <% @portfolio_stocks.each do |stock| %>
        <div class = "col">
         
            <%= link_to  portfolio_stock_path(stock.id), class: "card card-effects-gold h-100 w-100 my-3 p-0 border border-dark btn" do%>
                <div class="card-header bg-warning" style="--bs-bg-opacity: .95;">
                    <h4 class="mt-2 fw-bold text-monospace">
                        <%= stock.symbol %>
                    </h4> 
                    <p class="text-dark">
                        <%= Stock.find_by(symbol: stock.symbol).corp_name%>
                    </p>
                    <span class="badge bg-dark rounded-pill p-2 position-absolute top-0 end-0 mt-2 me-2">
                        <%= stock.total_quantity %>
                    </span>
                </div>
                <div class="card-body">
                    <div class="d-flex">
                        <p class="card-title fw-bold mx-3">
                            Latest Price:
                        </p>
                        <p class="fw-bold">
                            <%= stock.access_quote.latest_price %>
                        </p>
                    </div>
                    <div class="d-flex">
                        <p class="card-title  fw-bold mx-3">
                            Total Value:
                        </p>
                        <p class="fw-bold"> 
                            <%= stock.total_value%>
                        </p>
                    </div>
                </div>

            <% end %>
            
        </div>
    <% end %>
</div>
</div>