<h1>Stock#show</h1>
<p>Find me in app/views/stock/show.html.erb</p>

<div class = "container">
  <section class = "row row-cols-1 row-cols-md-3 row-cols-sm-2 row-cols-lg-4 g-4">
        <div class = "col">
            <div class="card h-100 w-100 my-3">
        
                <%= @stock.symbol %> 
                <%= @stock.corp_name %>
                <%= @stock.access_quote.change_percent_s %>
                <%= @stock.access_quote.latest_price%>
                <%= @stock.corp_description %>

                <%= link_to 'Buy Stock', edit_portfolio_stock_path(:stocksymbol => @stock.symbol)%>
                <%= link_to 'Back', stocks_path %>

            </div>
        </div>
</div>
